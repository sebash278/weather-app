<%- include("partials/header.ejs") %>
        <main>
            <!-- Formulario de b√∫squeda -->
            <form action="/weather" method="POST" class="search-form">
                <div class="input-group">
                    <input 
                        type="text" 
                        name="city" 
                        placeholder="Ingresa una ciudad..." 
                        required
                        class="city-input"
                    >
                    <button type="button" id="geo-btn" class="geo-btn"><i class="fa-solid fa-location-crosshairs"></i></button>
                </div>
            </form>

            <!-- Mostrar error si existe -->
            <% if (error) { %>
                <div class="error-message">
                    <p>‚ùå <%= error %></p>
                </div>
            <% } %>

            <!-- Mostrar datos del clima si existen -->
            <% if (weather) { %>
                <div class="weather-card">
                    <div class="weather-header">
                        <h2><%= weather.city %>, <%= weather.country %></h2>
                    </div>
                    
                    <div class="weather-main">
                        <div class="temperature">
                            <img 
                                src="https://openweathermap.org/img/wn/<%= weather.icon %>@2x.png" 
                                alt="<%= weather.description %>"
                                class="weather-icon"
                            >
                            <span class="temp-value"><%= weather.temperature %>¬∞C</span>
                        </div>
                        <p class="weather-description"><%= weather.description %></p>
                        <p class="feels-like">Sensaci√≥n t√©rmica: <%= weather.feelsLike %>¬∞C</p>
                    </div>
                    
                    <div class="weather-details">
                        <div class="detail-item">
                            <span class="detail-label">üíß Humedad:</span>
                            <span class="detail-value"><%= weather.humidity %>%</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">üí® Viento:</span>
                            <span class="detail-value"><%= weather.windSpeed %> m/s</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">üìä Presi√≥n:</span>
                            <span class="detail-value"><%= weather.pressure %> hPa</span>
                        </div>
                    </div>
                </div>
            <% } %>
        </main>
    </div>

    <script src="/js/script.js"></script>

